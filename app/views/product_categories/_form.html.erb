<div class="panel-body">
	<%= form_for @product_category do |f| %>
		<div>
	  		<%= f.label :name %>
	  		<%= f.text_field :name, class: "form-control" %>
		</div>
	    <div>
	      <%= f.label :description %>
	      <%= f.text_area :description, class: "form-control" %>
	    </div>
		<p>
		<div>
			<%= f.submit @product_category.new_record? ? "Create Product Category" : "Update Product Category", class: "btn btn-default" %>
		</div>
	<% end %>	              
</div>
<!-- /.panel-body -->        
