
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">System Users Management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-9">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">System Users</h3>
            </div>
            <!-- /.panel-heading -->

            <div class="panel-body">
            	<div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>Show</th>
											<th>Username</th>
											<th>Group</th>
											<th>Disabled</th>
                    </tr>
                  </thead>

                  <tbody>
                  	<% count = 0 %>
                  	<% @system_users.each do |system_user| %>
                  		<% count += 1 %>
                      <tr class=<%= count % 2 == 1 ? "odd" : "even" %>>
                        <td><%= link_to "View", system_user %></td>
												<td><%= system_user.username %></td>
                        <% if system_user.system_group_id.present? %>
                          <td><%= system_user.system_group.name %></td>
                        <% else %>
                          <td>Not Assigned</td>
                        <% end %>
                        <td><%= system_user.disabled ? "Yes" : "No" %></td>
                      </tr>
                      <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->        
          </div>
          <!-- /.panel -->
      </div>
        <!-- /.col-lg-12 -->
          <div class="col-lg-3 col-md-3">
            <div class="panel panel-primary">
              <!-- /.panel-heading -->
              <div class="panel-body">
                <p><%= link_to "New System User", new_system_user_path %></p>  
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
          </div>
          <!-- end div col-lg-3 -->
        </div>
    <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>