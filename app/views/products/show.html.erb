
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= "#{@product.name}" %></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-9 col-md-9">
            <div class="panel panel-primary">
              <!-- /.panel-heading -->

              <div class="panel-body">
              	<div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                    <tbody>
	                    <tr>
	                    	<td>Name:</td>
	                    	<td><%= @product.name %></td>
	                    </tr>
	                    <tr>
	                    	<td>Description:</td>
	                    	<td><%= @product.description %></td>
	                    </tr>
                      <tr>
                        <td>Price:</td>
                        <td><%= @product.selling_price %></td>
                      </tr>
                      <tr>
                        <td>Service ?:</td>
                        <td><%= @product.is_service ? "Yes" : "No" %></td>
                      </tr>
                      <tr>
                        <td>Category:</td>
                        <td><%= @product.product_category.name %></td>
                      </tr>
                    </tbody>
                  </table>
	              </div>
	              <!-- /.table-responsive -->
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-9 -->
        <div class="col-lg-3 col-md-3">
        	<div class="panel panel-primary">
              <!-- /.panel-heading -->

              <div class="panel-body">
              	<p><%= link_to "All Products", products_path %></p>
              	<p><%= link_to "Edit Product", edit_product_path(@product) %></p> 
              	<p><%= link_to "Delete Product", @product, method: :delete, data: { confirm: "You sure?" } %></p>
                <p><%= link_to "New Product", new_product_path %></p> 
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
        </div>
        <!-- end div col-lg-3 -->
    </div>
    <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>