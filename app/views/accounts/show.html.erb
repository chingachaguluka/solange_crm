
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= "#{@account.name}" %></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-9 col-md-9">
            <div class="panel panel-primary">
              <!-- /.panel-heading -->

              <div class="panel-body">
              	<div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                    <tbody>
	                    <tr>
	                    	<td>Name:</td>
	                    	<td><%= @account.name %></td>
	                    </tr>
	                    <tr>
	                    	<td>Address:</td>
	                    	<td><%= @account.address %></td>
	                    </tr>
	                    <tr>
	                    	<td>Status:</td>
	                    	<% if @account.account_status_id.present? %>
                            <td><%= @account.account_status.name %></td> %>
                        <% else %>
                            <td> Not Assigned </td> %>
                        <% end %>
	                    </tr>
                    </tbody>
                  </table>
	              </div>
	              <!-- /.table-responsive -->
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-9 -->
        <div class="col-lg-3 col-md-3">
        	<div class="panel panel-primary">
              <!-- /.panel-heading -->

              <div class="panel-body">
              	<p><%= link_to "All Accounts", accounts_path %></p>
              	<p><%= link_to "Edit Account", edit_account_path(@account) %></p>
              	<p><%= link_to "New Account", new_account_path %></p>  
              	<p><%= link_to "Delete Account", @account, method: :delete, data: { confirm: "You sure?" } %></p>
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
        </div>
        <!-- end div col-lg-3 -->
    </div>
    <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>