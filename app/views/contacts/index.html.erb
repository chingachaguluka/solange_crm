
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Contacts Management</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-9">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Contacts</h3>
            </div>
            <!-- /.panel-heading -->

            <div class="panel-body">
            	<div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                  <thead>
                    <tr>
                      <th>Show</th>
											<th>First Name</th>
											<th>Last Name</th>
											<th>Cell</th>
											<th>Email</th>
                    </tr>
                  </thead>

                  <tbody>
                  	<% count = 0 %>
                  	<% @contacts.each do |contact| %>
                  		<% count += 1 %>
                      <tr class=<%= count % 2 == 1 ? "odd" : "even" %>>
                        <td><%= link_to "View", contact %></td>
												<td><%= contact.first_name %></td>
												<td><%= contact.last_name %></td>
												<td><%= contact.cell_phone %></td>
												<td><%= contact.email %></td>
                      </tr>
                      <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->        
          </div>
          <!-- /.panel -->
      </div>
        <!-- /.col-lg-12 -->
          <div class="col-lg-3 col-md-3">
            <div class="panel panel-primary">
              <!-- /.panel-heading -->
              <div class="panel-body">
                <p><%= link_to "New Contact", new_contact_path %></p>  
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
          </div>
          <!-- end div col-lg-3 -->
        </div>
    <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>