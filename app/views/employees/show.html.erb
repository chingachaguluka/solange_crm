
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= "#{@employee.first_name}  #{@employee.last_name}" %></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-9 col-md-9">
            <div class="panel panel-primary">
              <!-- /.panel-heading -->

              <div class="panel-body">
              	<div class="table-responsive">
                  <table class="table table-striped table-bordered table-hover">
                    <tbody>
	                    <tr>
	                    	<td>Title:</td>
	                    	<td><%= @employee.title %></td>
	                    </tr>
	                    <tr>
	                    	<td>First Name:</td>
	                    	<td><%= @employee.first_name %></td>
	                    </tr>
	                    <tr>
	                    	<td>Last Name:</td>
	                    	<td><%= @employee.last_name %></td>
	                    </tr>
                      <tr>
                        <td>Cell:</td>
                        <td><%= @employee.cell_phone1 %></td>
                      </tr>
                      <tr>
                        <td>Cell:</td>
                        <td><%= @employee.cell_phone2 %></td>
                      </tr>
                      <tr>
                        <td>Address:</td>
                        <td><%= @employee.address %></td>
                      </tr>
                      <tr>
                        <td>City:</td>
                        <td><%= @employee.city %></td>
                      </tr>
                      <tr>
                        <td>Country:</td>
                        <td><%= @employee.country %></td>
                      </tr>
                      <tr>
                        <td>Email:</td>
                        <td><%= @employee.email %></td>
                      </tr>


                      <tr>
                        <td>Position:</td>
                        <td><%= @employee.position %></td>
                      </tr>
                      <tr>
                        <td>Employment #:</td>
                        <td><%= @employee.employment_number %></td>
                      </tr>
                      <tr>
                        <td>Date of Birth:</td>
                        <td><%= @employee.date_of_birth %></td>
                      </tr>
                      <tr>
                        <td>Engeged Date:</td>
                        <td><%= @employee.engaged_on %></td>
                      </tr>
                      <tr>
                        <td>Termination Date:</td>
                        <td><%= @employee.terminated_on %></td>
                      </tr>
                      <tr>
                        <td>Temporary Employee:</td>
                        <td><%= @employee.temporary %></td>
                      </tr>
                      <tr>
                        <td>Under Probation:</td>
                        <td><%= @employee.under_probation %></td>
                      </tr>
                      <tr>
                        <td>Next of Kin:</td>
                        <td><%= @employee.next_of_kin %></td>
                      </tr>
                      <tr>
                        <td>Next of Kin's Phone:</td>
                        <td><%= @employee.next_of_kin_phone %></td>
                      </tr>
                      <tr>
                        <td>Next of Kin's Email:</td>
                        <td><%= @employee.next_of_kin_email %></td>
                      </tr>
                      <tr>
                        <td>Next of Kin's Address:</td>
                        <td><%= @employee.next_of_kin_address %></td>
                      </tr>

	                     <tr>
	                    	<td>Status:</td>
                        <% if @employee.employee_status_id.present? %>
	                    	    <td><%= @employee.employee_status.name %></td> %>
                        <% else %>
                            <td> Not Assigned </td> %>
                        <% end %>
	                    </tr>
                    </tbody>
                  </table>
	              </div>
	              <!-- /.table-responsive -->

	              
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-9 -->
        <div class="col-lg-3 col-md-3">
        	<div class="panel panel-primary">
              <!-- /.panel-heading -->

              <div class="panel-body">
              	<p><%= link_to "All Employees", employees_path %></p>
              	<p><%= link_to "Edit Employee", edit_employee_path(@employee) %></p>
              	<p><%= link_to "Delete Employee", @employee, method: :delete, data: { confirm: "You sure?" } %></p>
                <p><%= link_to "New Employee", new_employee_path %></p>
              </div>
              <!-- /.panel-body -->        
            </div>
            <!-- /.panel -->
        </div>
        <!-- end div col-lg-3 -->
    </div>
    <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>